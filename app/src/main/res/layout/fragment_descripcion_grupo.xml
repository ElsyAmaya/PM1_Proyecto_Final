<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f7fa"
    tools:context=".DescripcionGrupoFragment">

    <ListView
        android:id="@+id/participants_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130dp">

    </ListView>


    <TextView
        android:id="@+id/nombreGrupo"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:text="NOMBRE DEL GRUPO"
        android:textAlignment="center"
        android:textColor="@color/gris_font"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/editNombreGrupo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="350dp"
        app:srcCompat="@drawable/lapiz" />

</FrameLayout>

